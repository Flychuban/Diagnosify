generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
enum ModelEnum {
  PNEUMONIA
  PARKINSON
  MALARIA
  LIVER_DISEASE
  KIDNEY
  HEART_DISEASE
  DIABETES
  CANCER_SEGMENTATION
  BREAST_CANCER
}

model User {
  id         Int      @id @default(autoincrement())
  username   String
  diagnoses  Diagnosis[]
}

model Diagnosis {
  id        Int      @id @default(autoincrement())
  type      ModelEnum
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  raw_data   String
  is_correct Boolean?
}